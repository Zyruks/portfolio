---
import { SITE_DESCRIPTION, SITE_TITLE } from 'consts';
import BaseHead from '@components/BaseHead/BaseHead.astro';
import Footer from '@components/Footer/Footer.astro';
import DottedPattern from '@components/Patterns/DottedPattern/DottedPattern.astro';

interface Props {
  metaTitle?: string;
  metaDescription?: string;
}
const { metaTitle = SITE_TITLE, metaDescription = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={metaTitle} description={metaDescription} />
  </head>
  <body class="relative bg-gray-900 text-slate-100">
    <slot />
    <Footer />
    <DottedPattern />
  </body>
</html>
